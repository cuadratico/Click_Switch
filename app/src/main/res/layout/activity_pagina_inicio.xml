<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pagina_inicioActivity"
    android:background="@color/ojo"
    >




    <TextView
        android:id="@+id/texto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Puntuacion: "
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/record_h"
        app:layout_constraintBottom_toBottomOf="@id/record_h"
        app:layout_constraintEnd_toStartOf="@id/record_h"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="10dp"
        />


    <TextView
        android:id="@+id/record_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="130dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tiempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="/15s"
        android:textSize="30dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/record_h"
        app:layout_constraintBottom_toBottomOf="@id/record_h"
        app:layout_constraintStart_toEndOf="@id/record_h"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/facil"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/diseno"
        android:text="Easy"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp"
        android:gravity="center"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dificil"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/diseno"
        android:text="hard"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dificil"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="100dp"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/crazy"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/diseno"
        android:text="crazy"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dificil"
        android:layout_marginTop="50dp"/>

    <Switch
        android:id="@+id/s_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/menu"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:text="EN"
        />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/sound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sonido_activado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/menu"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        tools:ignore="MissingConstraints"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/git"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/git"
        android:background="@drawable/bordes_de_git"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/menu"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        tools:ignore="MissingConstraints"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/colores"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/menu"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        tools:ignore="MissingConstraints"/>

    <Spinner
        android:id="@+id/colores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="150dp"
        android:layout_marginTop="14dp"
        android:background="@color/ojo"
        />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/ojo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"/>



    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/reiniciar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/menu"
        android:layout_width="63dp"
        android:layout_height="wrap_content"
        android:src="@drawable/lines"
        android:background="@color/ojo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="16dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>